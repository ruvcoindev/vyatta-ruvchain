echo "Building vyatta-ruvchain..."
BRANCH=$1; [ -z "${BRANCH}" ] && BRANCH=master
cd vyatta-ruvchain && \
    BRANCH=${BRANCH} PKGNAME=ruvchain-vyos13 PKGARCH=i386 make cross -e && \
    cd ..
