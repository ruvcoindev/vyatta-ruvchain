if [ -f /config/ruvchain.$1.conf ]; then
	echo "ruvchain generate conf: /config/ruvchain.$1.conf already exists, leaving alone"
else
	echo "ruvchain generate conf: $1"

	/usr/local/bin/ruvchain -genconf > /config/ruvchain.$1.conf
	sed -i "s/IfName: auto/IfName: $1/" /config/ruvchain.$1.conf
fi
